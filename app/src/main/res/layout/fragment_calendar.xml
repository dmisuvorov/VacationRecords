<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cvCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        custom:cardCornerRadius="8dp">

        <com.archit.calendardaterangepicker.customviews.DateRangeCalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:calendar_tag="Calendar"
            custom:disable_date_color="#ABABAB"
            custom:enable_past_date="true"
            custom:editable="true"
            custom:week_offset="0">
        </com.archit.calendardaterangepicker.customviews.DateRangeCalendarView>

    </android.support.v7.widget.CardView>
    
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvCalendar"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_text_ok_calendar_picker"/>
    
</RelativeLayout>